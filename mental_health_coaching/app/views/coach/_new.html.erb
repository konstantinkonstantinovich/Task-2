
<div class="modal-header">
  <h5 class="modal-title">Recommend to your users</h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
  <%= form_with url: recommend_to_users_page_path do |f| %>

      <% @users.each do |user|%>
          <%= f.label :users, user.user.name, class: "check-box-rec-block" do %>
            <%= f.check_box :users,  {:multiple => true}, user.user.name, '' %>
            <p class="margin-none"><%= user.user.name %></p>
          <% end %>
      <% end %>
    <br>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">CANCEL</button>
      <%= f.submit "SEND", class: "btn btn-send"%>
    </div>
  <% end %>
